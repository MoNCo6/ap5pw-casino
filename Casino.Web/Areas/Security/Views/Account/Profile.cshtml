@model UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>

<div>
    @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
    {
        <img src="@Url.Content(Model.ImagePath)" alt="Profile Image" class="img-thumbnail" />
    }
    else
    {
        <p>No profile image available.</p>
    }
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Username</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th>First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Balance</th>
            <td>@Model.Balance</td>
        </tr>
    </tbody>
</table>

<a href='@Url.Action("Index", "Home", new { area = "" })' class="btn btn-primary">Return to Homepage</a>
<a href='@Url.Action("EditProfile", "Account", new { area = "Security" })' class="btn btn-info">Edit Profile</a>
<a href='@Url.Action("AddDeposit", "Account", new { area = "Security" })' class="btn btn-danger">Add amount</a>
