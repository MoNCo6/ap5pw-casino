@model Deposit

@{
    ViewData["Title"] = "Add amount";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <label class="form-label">Amount</label>
    <form asp-action="AddDeposit" asp-controller="Account" method="post">
        <input id="addAmount" class="form-control-file" asp-for="Amount">
        <span asp-validation-for="Amount" class="text-danger"></span>
        <button type="submit" class="btn btn-danger">Add</button>
    </form>
</div>