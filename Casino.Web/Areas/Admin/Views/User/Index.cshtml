@model IList<Casino.Domain.Identity.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="test-primary">User Administration</h1>
        </div>
    </div>
    @{
        if (Model != null && Model.Count > 0)
        {
            <br /> <br />
            <table class="table table-border table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">UserName</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">CreatedAt</th>
                        <th scope="col">Balance</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; ++i)
                    {
                        <tr width="50%">
                            <th scope="row">@Model[i].Id</th>
                            <td>@Model[i].UserName</td>
                            <td>@Model[i].FirstName</td>
                            <td>@Model[i].LastName</td>
                            <td>@Model[i].Email</td>
                            <td>@Model[i].PhoneNumber</td>
                            <td>@Model[i].CreatedAt</td>
                            <td>@Model[i].Balance</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Edit" asp-route-Id="@Model[i].Id" class="btn btn-secondary mx-1">
                                        <i class="bi bi-pencil"></i>
                                        &nbsp;Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();" class="btn btn-danger mx-1">
                                        <i class="bi bi-trash3-fill"></i>
                                        &nbsp;Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}
