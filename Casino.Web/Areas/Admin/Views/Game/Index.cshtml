@model IList<Game>

@{
    if (Model != null && Model.Count > 0)
    {
        <div class="container p-3">
            <div class="row pt-4">
                <div class="col-6">
                    <h1 class="test-primary">Game Administration</h1>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Game" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill"></i> &nbsp; Create new game
                    </a>
                </div>
            </div>
            <br /> <br />
            <table class="table table-border table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">@nameof(Game.Id)</th>
                        <th scope="col">@nameof(Game.Title)</th>
                        <th scope="col">@nameof(Game.Description)</th>
                        <th scope="col">@nameof(Game.Rules)</th>
                        <th scope="col">@nameof(Game.ImageSrc)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; ++i)
                    {
                        <tr width="50%">
                            <th scope="row">@Model[i].Id</th>
                            <td>@Model[i].Title</td>
                            <td>@Model[i].Description</td>
                            <td>@Model[i].Rules</td>
                            <td>@Model[i].ImageSrc</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Edit" asp-route-Id="@Model[i].Id" class="btn btn-secondary mx-1">
                                        <i class="bi bi-pencil"></i>
                                        &nbsp;Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();" class="btn btn-danger mx-1">
                                        <i class="bi bi-trash3-fill"></i>
                                        &nbsp;Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@section Scripts
    {
    <script src="~/js/dialogs.js"></script>
        }
