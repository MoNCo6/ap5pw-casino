@model Game

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                <i class="bi bi-person-plus"></i>&nbsp; Create new game
            </h2>
            <hr />
        </div>
        <!--This display all validations-->
        <!--<div asp-validation-summary="All"></div>-->
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="Rules"></label>
            <input asp-for="Rules" class="form-control" />
            <span asp-validation-for="Rules" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Image</label>
            <input id="fileupload" class="form-control-file" asp-for="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">
            <i class="bi bi-floppy-fill"></i>&nbsp; Create!
        </button>
        <a asp-area="Admin" asp-controller="Game" asp-action="Index" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-box-arrow-left"></i>&nbsp; Back to list
        </a>
</form>

<!--Validation on client site-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}